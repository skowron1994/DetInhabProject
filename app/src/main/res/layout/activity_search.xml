<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginshadow">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/listview" >


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="5dp"

                app:srcCompat="@drawable/inhabitants" />

            <TextView
                android:id="@+id/inhabTitle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mieszkańcy"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/linearLayout">

        <TextView
            android:id="@+id/etHintInhab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Wpisz imię lub nazwisko mieszkańca:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <SearchView
            android:id="@+id/etSearchInhab"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/searchview"
            android:ems="15"
            android:inputType="textPersonName"
            android:layout_below="@+id/etHintInhab"
            android:text=""
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etSearchInhab">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mieszkaniec:"
                android:layout_marginLeft="16dp"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokój:"
                android:textSize="16dp"
                android:layout_marginRight="56dp"
                android:layout_alignParentRight="true"
                android:textColor="#000000"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/lvInhabitants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativelayout1"
            android:layout_marginTop="1dp"
            android:background="@drawable/listview"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="183dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true">

        </ListView>



    </RelativeLayout>


</RelativeLayout>