<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginshadow"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="5dp"

            app:srcCompat="@drawable/guests"/>

        <TextView
            android:id="@+id/tvGstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest name"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvGstSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Surname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/listview">

        <TextView
            android:id="@+id/tvHabAgeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Wiek: "
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Age" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tvRoomInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:text="Numer pokoju:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvRoomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:text="Room number" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="65dp"
            android:background="#000000" />


        <TextView
            android:id="@+id/tvConsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="75dp"
            android:text="Prawny opiekun:"
            android:textColor="#000000"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tvCounsuelor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="75dp"
            android:text="Counsuelor" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="95dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tvConsContactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="105dp"
            android:text="Kontakt do opiekuna:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvCounContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="105dp"
            android:text="Contact" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="125dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tvMaxReturnTimeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="135dp"
            android:text="Maksymalny czas powrotu:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvMaxReturnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="135dp"
            android:text="Return Time" />

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="155dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tvLastGuestInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="165dp"
            android:text="Ostatni gość:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvLastGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="165dp"
            android:text="Last guest" />

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="185dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tvAdInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="195dp"
            android:text="Płeć:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvAdnotations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="195dp"
            android:text="Sex" />

        <View
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvAdInfo"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#000000" />




    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <RelativeLayout
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/listview">

        <TextView

            android:id="@+id/tvStatusInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Status:"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"/>

        <View
            android:id="@+id/line8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tvCurrentStatus"
            android:text="Current Status"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textStyle="italic|bold"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/fbChangeStatus"
        android:background="@drawable/oval"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/edit"
        />

    <ListView
        android:id="@+id/lvStatusList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="40dp"
        android:background="@color/white"/>

</RelativeLayout>