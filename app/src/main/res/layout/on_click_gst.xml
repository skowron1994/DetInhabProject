<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginshadow"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgDetinhab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvGstSurname"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/detinhab" />

    <TextView
        android:id="@+id/tvGstInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Dane dla gościa:"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvGstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Guest name"
        android:layout_below="@+id/tvGstInfo"
        android:layout_alignLeft="@+id/tvGstInfo"
        android:layout_alignStart="@+id/tvGstInfo"
        android:textColor="#FFFF00"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvGstSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest Surname"
        android:textColor="#FFFF00"
        android:textSize="20dp"
        android:layout_below="@+id/tvGstName"
        android:layout_alignLeft="@+id/tvGstName"
        android:layout_alignStart="@+id/tvGstName" />

    <TextView
        android:id="@+id/tvGstStatusInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Status:"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tvGstSurname"
        android:layout_alignLeft="@+id/tvGstSurname"
        android:layout_alignStart="@+id/tvGstSurname" />

    <TextView
        android:id="@+id/tvGstOperationsInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ostatnie działania:"
        android:layout_below="@+id/tvGstStatusInfo"
        android:layout_alignLeft="@+id/tvGstStatusInfo"
        android:layout_alignStart="@+id/tvGstStatusInfo"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:width="100dp"
        android:text="Powrót"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imgDetinhab"
        android:layout_alignStart="@+id/imgDetinhab" />
</RelativeLayout>